{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
  },
  "globals": {
    "__DEV__": false,
  },
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "no-multiple-empty-lines": [2, {"max": 1, "maxEOF": 1}],
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
